<div class="card-grid">
  {{#each ideas}}
  <div class="card mb-4">
    <h4 class="card-header">{{title}}
      <form method="post" action="/ideas/{{id}}?_method=DELETE">
        <a class="btn btn-outline-primary  mt-3" href="/ideas/edit/{{id}}">Editar</a>
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-danger mt-3" value="Excluir">
      </form>
    </h4>
    <div class="card-body">
      <p>{{details}}</p>
      <small>
        <input type="text" class="form-control-plaintext" type="text" placeholder="Curso: {{tema}}" readonly>
      </small>
    </div>
    <div class="card-footer text-muted text-right">
      <small>
        <input type="text" class="form-control-plaintext" placeholder="Criado por: {{autor}} em {{date}}">
        <input type="text" class="form-control-plaintext" placeholder="Email: {{email}}">
      </small>
    </div>
  </div>


  {{else}}
</div>
<div class="jumbotron text-center">
  <h1 class="display-4"> :( </h1>
  <h1 class="display-5">Nenhuma ideia encontrada.</h1>
  <p class="lead">VocÃª pode contribuir com uma nova clicando <a href="/ideas/add">aqui.</a>
  </p>
</div>
{{/each}}