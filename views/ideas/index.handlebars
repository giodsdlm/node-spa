<div class="card-columns">
  {{#each ideas}}
  <div class="card mb-2">
    <div class="card-body">
      <h4>{{title}}</h4>
      <p>{{details}}</p>
      <a class="btn btn-outline-dark btn-sm" href="/ideas/edit/{{id}}">Editar</a>
    </div>
  </div>

  {{else}}
  <p>Nenhuma ideia foi encontrada :(</p>
  {{/each}}
</div>